
/*
 * File responsible for initializing module.
 */


/*
 * Creates the "path" Active Event.
 */
split:x:/..?name
  =:/
set:x:/@split/0/-
join:x:/@split/*?name
  sep:/
eval-x:x:/+/*
create-event:p5.io.unroll-path.@HYPERLANG
  return:/{0}
    :x:/@join?value





/*
 * Creates our version Active Event.
 */
create-event:hyperlang.version

  return:decimal:1.0





/*
 * Evaluates all startup scripts in "/startup/" folder.
 */
micro.evaluate.folder:@HYPERLANG/startup/
