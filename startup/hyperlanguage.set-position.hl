
/*
 * Creates the event that sets the current position in our command hierarchy.
 *
 * Requires [_arg] being the database ID of a "command" from hyperlanguage.
 */
create-event:hyperlanguage.set-position

  /*
   * Sets the current position to the specified [_arg].
   */
  p5.web.viewstate.set:hyperlanguage.position
    src:x:/../*/_arg?value
