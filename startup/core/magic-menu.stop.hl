
/*
 * Creates the event that actually stops Magic menu.
 */
create-event:magic-menu.stop

  /*
   * Says goodbye, close options, and deletes main Magic menu input widget,
   * if it exists.
   */
  magic-menu.speak:[Goodbye]
  magic-menu.options.close
  if
    fetch:x:/0/0?value
      widget-exists:magic-menu-listener
    delete-widget:magic-menu-listener
